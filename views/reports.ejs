<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
<body>
<%- include('partials/_header.ejs') %>
  <main role="main" class="container mt-4">
    <h1 class="mb-4">Expense Reports</h1>

    <form id="dateRangeForm" class="mb-4">
      <div class="row">
        <div class="col-md-4">
          <label for="closeDate" class="form-label">Close Date (MM/YYYY):</label>
          <input type="month" id="closeDate" name="closeDate" class="form-control">
        </div>
        <div class="col-md-4 d-flex align-items-end">
          <button type="submit" class="btn btn-primary">Filter Report</button>
        </div>
      </div>
    </form>

    <div id="reportContent">
      <%- include('partials/_reportContent', { aggregatedData: aggregatedData, closeDate: closeDate }) %>
    </div>
  </main>
<%- include('partials/_footer.ejs') %>
<script src="/js/reportFiltering.js"></script>
</body>
</html>