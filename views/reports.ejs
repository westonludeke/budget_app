<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
<body>
<%- include('partials/_header.ejs') %>
  <main role="main" class="container mt-4">
    <h1 class="mb-4">Expense Reports</h1>
    <% if (aggregatedData && aggregatedData.length > 0) { %>
      <div class="row">
        <% aggregatedData.forEach(month => { %>
          <div class="col-md-6 mb-4">
            <div class="card">
              <div class="card-header bg-primary text-white">
                <h2 class="mb-0"><%= month._id %></h2>
              </div>
              <div class="card-body">
                <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th>Category</th>
                      <th class="text-right">Total</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% let monthTotal = 0; %>
                    <% month.categories.forEach(category => { %>
                      <tr>
                        <td><%= category.category || 'Uncategorized' %></td>
                        <td class="text-right">$<%= category.total.toFixed(2) %></td>
                      </tr>
                      <% monthTotal += category.total; %>
                    <% }); %>
                  </tbody>
                  <tfoot>
                    <tr class="table-active">
                      <th>Total</th>
                      <th class="text-right">$<%= monthTotal.toFixed(2) %></th>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="alert alert-info" role="alert">
        No transaction data available for reporting. Please upload some transactions to see your expense breakdown.
      </div>
    <% } %>
  </main>
<%- include('partials/_footer.ejs') %>
</body>
</html>