<form id="editTransactionForm">
  <input type="hidden" name="id" value="<%= transaction._id %>">
  <div class="mb-3">
    <label for="postDate" class="form-label">Post Date</label>
    <input type="date" class="form-control" id="postDate" name="postDate" value="<%= transaction.postDate.toISOString().split('T')[0] %>" required>
  </div>
  <div class="mb-3">
    <label for="transactionDate" class="form-label">Transaction Date</label>
    <input type="date" class="form-control" id="transactionDate" name="transactionDate" value="<%= transaction.transactionDate.toISOString().split('T')[0] %>" required>
  </div>
  <div class="mb-3">
    <label for="referenceNumber" class="form-label">Reference Number</label>
    <input type="text" class="form-control" id="referenceNumber" name="referenceNumber" value="<%= transaction.referenceNumber %>" required>
  </div>
  <div class="mb-3">
    <label for="merchantData" class="form-label">Merchant Data</label>
    <input type="text" class="form-control" id="merchantData" name="merchantData" value="<%= transaction.merchantData %>" required>
  </div>
  <div class="mb-3">
    <label for="amount" class="form-label">Amount</label>
    <input type="number" step="0.01" class="form-control" id="amount" name="amount" value="<%= transaction.amount %>" required>
  </div>
  <div class="mb-3">
    <label for="closeDate" class="form-label">Close Date</label>
    <input type="text" class="form-control" id="closeDate" name="closeDate" value="<%= transaction.closeDate %>" placeholder="MM/YYYY" required>
  </div>
  <div class="mb-3">
    <label for="category" class="form-label">Category</label>
    <input type="text" class="form-control" id="category" name="category" value="<%= transaction.category %>" required>
  </div>
  <button type="submit" class="btn btn-primary">Save Changes</button>
</form>